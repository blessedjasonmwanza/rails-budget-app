<header>
  <%= link_to "Back", categories_path, class: "btn"  %>
  <h1>Budgets</h1>
  <% if user_signed_in? %>
    <%= button_to "Logout", destroy_user_session_path, method: :delete, data: {turbo: false}, class: "btn bg-danger"  %>
  <% end %>
</header>

<%= render @category %>

<div class="category_actions">
  <%= link_to "Edit", edit_category_path(@category) %>
  <%= button_to "Destroy category", @category, method: :delete %>
</div>

<footer>
  <%= link_to "Add Transaction", new_category_transaction %>
</footer>
