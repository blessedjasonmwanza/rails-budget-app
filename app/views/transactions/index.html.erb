<header>
  <%= link_to "Back", categories_path, class: "btn"  %>
  <h1>Transactions</h1>
  <% if user_signed_in? %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn bg-danger" %>
  <% end %>
</header>


<%= render partial: 'categories/category', locals: { category: @category} %>
<div id="transactions">
  <% @transactions.each do |transaction| %>
    <%= render transaction %>
    <p>
      <%= link_to "Show this transaction", transaction %>
    </p>
  <% end %>
</div>

<footer>
  <%= link_to "Add Transaction", new_category_transaction_path %>
</footer>
